<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:id="@+id/one_dhekr"
    >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                >
                <TextView
                    android:id="@+id/counter_of_dhekr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="50dp"


                    android:fontFamily="@font/almarai_extrabold"


                    android:gravity="center"

                    android:paddingHorizontal="8dp"
                    android:paddingVertical="50dp"

                    android:text="3"
                    android:background="@drawable/bg_count_dhekr"
                    android:textColor="@color/numberOfDhekr"
                    android:textAlignment="center"
                    android:textSize="100sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text_dhekr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"




                    android:layout_marginTop="50dp"

                    android:background="@drawable/bg_dhikr"


                    android:lineSpacingExtra="5dp"

                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/almarai"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"

                    android:paddingHorizontal="8dp"
                    android:paddingVertical="50dp"

                    android:text=""

                    android:textColor="@color/textColor"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/virtue_of_dhekr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:lineSpacingExtra="5dp"

                    android:layout_marginTop="50dp"

                    android:background="@drawable/bg_virtue_of_dhekr"

                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/almarai"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"

                    android:paddingHorizontal="8dp"
                    android:paddingTop="50dp"
                    android:paddingBottom="10dp"

                    android:text="sfadasd"

                    android:textColor="@color/textColor"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </FrameLayout>


    <TextView
        android:id="@+id/btn_virtue_of_dhekr"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="146dp"
        android:background="@drawable/back2_circle"
        android:fontFamily="@font/almarai"

        android:gravity="center"
        android:maxWidth="10dp"

        android:maxHeight="10dp"
        android:scaleType="fitCenter"
        android:text="فضل الذكر"
        android:textColor="@color/virtue_of_dhekr"
        android:textStyle="bold" />

</RelativeLayout>
